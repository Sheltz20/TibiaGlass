<Window x:Class="TibiaGlassMagnifier.MagnifierWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Magnifier"
        Width="320" Height="240"
        WindowStyle="None"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        Topmost="True"
        AllowsTransparency="False"
        Background="Transparent"
        Focusable="False"
        ShowActivated="False">
    <Grid>
        <!-- DWM draws the live thumbnail into the window's client area. -->
        <Border CornerRadius="10"
                BorderThickness="2"
                BorderBrush="#CCFFFFFF"
            Background="#22000000"
                Padding="6"
                IsHitTestVisible="False" />
    </Grid>
</Window>
